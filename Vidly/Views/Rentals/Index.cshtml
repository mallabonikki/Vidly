
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table id="customers" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Customers</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Movies</th>
            <th>Customers</th>
        </tr>
    </tfoot>
</table>

@section scripts
{
    <script>

        $(document).ready(function () {
            $('#customers').DataTable({
                ajax: { url: "/api/rentals", dataSrc: ""},
                columns: [
                    { data: "movie.title" },
                    { data: 'customer.name' }
                ],
                order: [
                    [1, 'asc']
                ],
                rowGroup: { dataSrc: 'customer.name'}
            });
        });
    </script>
}
