@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<p>@Html.ActionLink("New Movie", 
                    "New",
                    "Movies", 
                    null,
                    new { @class="btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>You don't have movies yet!</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movies
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model )
            {
                <tr>
                    <td>
                        @Html.ActionLink(
                            movie.Title,
                            "Edit",
                            "Movies",
                            new {id = movie.Id},
                            new { style="text-decoration:none;" }
                        )
                    </td>
                    <td>
                        @movie.GenreType.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
